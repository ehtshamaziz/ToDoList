<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <%NewItem.forEach(element => {%>
      <form action="/delete" method="post">
        <div class="item">
          <input name="checkbox" value="<%= element.id %>" type="checkbox" onchange="this.form.submit()"/>
          <p><%= element.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
      </form>
      <%});%>

      <form action="<%= route %>" method="post" class="item">
        <input
          type="text"
          name="toDoItem"
          id="toDoItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="Button" value="<%= NewItem %>">+</button>
      </form>
    </div>
  </body>
</html>
